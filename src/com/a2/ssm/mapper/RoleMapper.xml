<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.a2.ssm.mapper.RoleMapper">
	<!-- 解决表名与字段不匹配 -->
	<resultMap type="com.a2.ssm.model.Role" id="roleResultMap">
		<id property="roId" column="ro_id"/>
		<result property="roName" column="ro_name"/>
	</resultMap>
	
	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 roId,	roName
	</sql>
	
	<!-- 查询全部Role -->
	<select id="list" resultMap="roleResultMap">
		select *from t_role
	</select>
	<!-- 查询所有管理管角色 -->
	<select id="listAdmin" resultMap="roleResultMap">
		select *from t_role where ro_id not in(2,3)
	</select>
	<!-- 根据id查询角色信息  -->
	<select id="getById" resultMap="roleResultMap" parameterType="int">
		select * from t_role where ro_id=#{roId}
	</select>
	<!-- 更新角色信息 -->
	<update id="update" parameterType="com.a2.ssm.model.Role">
		update t_role set ro_name=#{roName} where ro_id=#{roId}
	</update>
	<!-- 删除角色信息 -->
	<delete id="delete" parameterType="int">
		delete from t_role where ro_id=#{roId}
	</delete>
	<!-- 添加角色 -->
	<insert id="save" parameterType="com.a2.ssm.model.Role">
		insert into t_role(ro_name) values(#{roName}) 
	</insert>
	
</mapper>
