<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.a2.ssm.mapper.PowerMapper" >
  <resultMap id="powerResultMap" type="com.a2.ssm.model.Power" >
    <id column="po_id" property="poId" jdbcType="INTEGER" />
    <result column="po_name" property="poName" jdbcType="VARCHAR" />
    <result column="parentId" property="parentid" jdbcType="INTEGER" />
    <result column="url" property="url" jdbcType="VARCHAR" />
  </resultMap>
  
  	<!-- 查询全部Power -->
	<select id="list" resultMap="powerResultMap">
		select *from t_power
	</select>
	<select id="listParentPower" resultMap="powerResultMap">
		select *from t_power where parentId=0
	</select>
	<select id="listChildPower" resultMap="powerResultMap" parameterType="com.a2.ssm.model.Power">
		select *from t_power where parentId=#{poId}
	</select>
	<!-- 根据id查询权限信息  -->
	<select id="getById" resultMap="powerResultMap" parameterType="int">
		select *from t_power where po_id=#{poId} and parentId=0
	</select>
	<select id="getAllById" resultMap="powerResultMap" parameterType="int">
		select *from t_power where po_id=#{poId}
	</select>
	<!-- 更新权限信息 -->
	<update id="update" parameterType="com.a2.ssm.model.Power">
		update t_power set po_name=#{poName},parentId=#{parentid} where po_id=#{poId}
	</update>
	<!-- 删除权限信息 -->
	<delete id="delete" parameterType="int">
		delete from t_power where po_id=#{poId}
	</delete>
	<!-- 添加权限 -->
  	<insert id="save" parameterType="com.a2.ssm.model.Power">
  		insert into t_power(po_name,parentId,url) values(#{poName},#{parentid},#{url})
  	</insert>
</mapper>